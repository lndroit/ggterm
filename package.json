{
  "name": "ggterm",
  "version": "0.2.0",
  "private": true,
  "description": "A Grammar of Graphics for Terminal User Interfaces",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '@ggterm/core' build",
    "test": "bun test packages/core",
    "lint": "eslint packages/core/src/**/*.ts",
    "lint:fix": "eslint packages/core/src/**/*.ts --fix",
    "format": "prettier --write 'packages/core/src/**/*.ts'",
    "format:check": "prettier --check 'packages/core/src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/core/dist"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.0"
  },
  "author": "Scott Handley",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/handleylab/ggterm.git"
  },
  "homepage": "https://github.com/handleylab/ggterm#readme",
  "bugs": {
    "url": "https://github.com/handleylab/ggterm/issues"
  },
  "keywords": [
    "grammar-of-graphics",
    "terminal",
    "tui",
    "visualization",
    "charts",
    "plots",
    "braille",
    "unicode"
  ]
}
